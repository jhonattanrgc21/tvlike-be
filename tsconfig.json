{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strictPropertyInitialization": false,
		"lib": ["es2017", "dom"],
		"allowJs": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"removeComments": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
